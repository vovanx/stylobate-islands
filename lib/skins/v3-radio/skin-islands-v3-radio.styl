stylobate_extends('skin-islands-v3-radio', 'skin-islands-v3-checkbox')

skin-islands-v3-radio__view($this)
  skin-islands-v3-checkbox__view($this)

  border-radius: 999px

skin-islands-v3-radio__icon($this)
  +optional-element($this, 'view')
    content: ''
    visibility: hidden

    position: absolute
    top: 50%
    left: 50%

    // Wrap with size
    width: 14px
    height: 14px
    margin: -3px -4px

    background: #000

    border-radius: 50%

    transform: scale(0.5)
    transform-origin: 0 0
